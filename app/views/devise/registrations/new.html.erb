<section class="container user-sign-up">
  <div class="columns">
    <div class="column is-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, 'Email', class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :password, '密碼', class: 'label' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
          <% if @minimum_password_length %>
            <em class="help">至少 <%= @minimum_password_length %> 個字元</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, '確認密碼', class: 'label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
        </div>

        <div class="actions">
          <%= f.submit "註冊", class: 'button is-primary' %>
        </div>
      <% end %>
    
      <%= render "devise/shared/links" %>
    </div>
    <div class="column is-9">
      <%= image_pack_tag 'cats/cat-register.jpeg' %>
    </div>
  </div>
</section>